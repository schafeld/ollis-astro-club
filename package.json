{
  "name": "ollis-astro-club",
  "version": "0.1.0",
  "description": "Educational astronomy website for young enthusiasts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint . --ext ts,js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,js --fix",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-essentials": "^7.5.0",
    "@storybook/addon-links": "^7.5.0",
    "@storybook/blocks": "^7.5.0",
    "@storybook/web-components": "^7.5.0",
    "@storybook/web-components-vite": "^7.5.0",
    "@testing-library/dom": "^10.4.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@web/test-runner-commands": "^0.8.0",
    "eslint": "^8.45.0",
    "jsdom": "^27.0.0",
    "storybook": "^7.5.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.6"
  },
  "keywords": [
    "astronomy",
    "education",
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Oliver Schafeld",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/schafeld/ollis-astro-club.git"
  },
  "bugs": {
    "url": "https://github.com/schafeld/ollis-astro-club/issues"
  },
  "homepage": "https://ollis-astro-club.com",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
